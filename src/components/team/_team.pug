mixin teamCard(card)
  // news card
  .team-card
    .team-card__image
      .team-card__image-wrapper
        .scaler(style="padding-bottom: "+(199/157) * 100 +"%; background-image: url(https://res.cloudinary.com/denjcproduct/image/upload/c_fill,e_blur:400,w_64/v1591990333/Coinmatics/"+card.image+".jpg)")
          img(js-lazy data-src='img/team/'+card.image+'.jpg' data-srcset='img/team/'+card.image+'.jpg 2x')
    .team-card__content
      .h5-title
        span=t(`employees.${card.employee}.name`)
        br
        span=t(`employees.${card.employee}.surname`)
      .p-small.c-gray= card.position
      .team-card__socials
        if (card.linkedin)
          a(href=card.linkedin target="_blank")
            +svgMono('social-linked-in')
        if (card.github)
          a(href=card.github target="_blank")
            +svgMono('social-github')

