
// megamenu
- var panelCoinmaticsUrl = 'https://panel.coinmatics.io';
- var toolsHref = path === '/homepage.html' || path === '/traders.html' ? '#tools' : '/traders.html#tools';
.megamenu.js-megamenu(data-id="1")
  .megamenu__scroller
    .container
      .megamenu__grid
        .megamenu__col
          a(href="/investors.html").menu-nav
            .menu-nav__icon
              +svgColor('nav-investors')
              +svgMono('nav-investors')
            .menu-nav__content
              .h5-title=t('megamenu.copyTradingForInvestorsTitle')
              .p-mini=t('megamenu.copyTradingForInvestorsDsc')
        .megamenu__col
          a(href=panelCoinmaticsUrl + '/signup').menu-nav
            .menu-nav__icon
              +svgColor('nav-top-traders')
              +svgMono('nav-top-traders')
            .menu-nav__content
              .h5-title=t('megamenu.discoverTopTradersTitle')
              .p-mini=t('megamenu.discoverTopTradersDsc')
        .megamenu__col
          a(href="https://t.me/coinmatics_signals").menu-nav
            .menu-nav__icon
              +svgColor('nav-signals')
              +svgMono('nav-signals')
            .menu-nav__content
              .h5-title=t('megamenu.freeTradingSignalsTitle')
              .p-mini=t('megamenu.freeTradingSignalsDsc')

