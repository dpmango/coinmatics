
// megamenu
- var currentLocale = locale || '';
- var toolsHref = path === '/' || path === '/for-traders' ? '#tools' : `/${currentLocale}/for-traders#tools`;
.megamenu.js-megamenu(data-id="1")
  .megamenu__scroller
    .container
      .megamenu__grid
        .megamenu__col
          a(href=`/${currentLocale}/for-investors`).menu-nav
            .menu-nav__icon
              +svgColor('nav-investors')
              +svgMono('nav-investors')
            .menu-nav__content
              .h5-title=t('megamenu.copyTradingForInvestorsTitle')
              .p-mini=t('megamenu.copyTradingForInvestorsDsc')
        .megamenu__col
          a(js-change-traders-view data-locale=locale data-needed-view="grid" href="#").menu-nav
            .menu-nav__icon
              +svgColor('nav-top-traders')
              +svgMono('nav-top-traders')
            .menu-nav__content
              .h5-title=t('megamenu.discoverTopTradersTitle')
              .p-mini=t('megamenu.discoverTopTradersDsc')
        .megamenu__col
          a(href="https://t.me/coinmatics_signals" target="_blank").menu-nav
            .menu-nav__icon
              +svgColor('nav-signals')
              +svgMono('nav-signals')
            .menu-nav__content
              .h5-title=t('megamenu.freeTradingSignalsTitle')
              .p-mini=t('megamenu.freeTradingSignalsDsc')

