
// MOBILE NAVI
.mobile-navi
  .mobile-navi__scroller
    .mobile-navi__head
      a(href="homepage.html").header__logo.logo
        .logo__icon
          +svgColor('logo-sign')
        .logo__name Coinmatics
        .logo__tag
          +svgColor('logo-beta')
