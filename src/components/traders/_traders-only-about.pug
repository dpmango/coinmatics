// TRADERS only about
.traders
  .traders__waves.bg-waves.bg-waves--blue
    include ../../icons/svg-inline/waves-up.svg

  // traders about
  .traders-about
    .container
      .traders-about__wrapper
        .traders-about__image(data-aos="fade")
          include ../../icons/svg-inline/illustration_traders-about-2.svg
          img(src='img/illustration_traders-about-2.png')

        .traders-about__content(data-aos="fade-up")
          .traders-about__content-wrapper
            .section-head.section-head--left
              h4.h4-title.c-light About
              h2.h2-title.h3-title-md How Does It Works
              p.p-small.p-main-xl.p-small-md.c-light Coinmatics is a technological platform uniting experienced crypto traders with the beginners for mutually beneficial cooperation. We offer open stats of any cryptocurrency trader, including a trade history and an overall efficiency.
              p.p-small.p-main-xl.p-small-md.c-light The information provides the traders with additional income from subscriptions, which depends on their performance level. To automate the process of copying trades, we’ve created the Auto-trading service that doesn’t require any actions. Get it started in two clicks!
              a(href="#").btn.btn-ghost.btn--iconed
                +svgMono('play')
                span Watch Video

        .traders-about__bg-coins
          include ../../icons/svg-inline/illustration_traders-about-coins.svg

  .traders__waves.bg-waves.bg-waves--bottom.bg-waves--dark
    include ../../icons/svg-inline/waves-up.svg
