// PAGE TITLE
.page-title.page-title--dark.page-title--more-height
  .container.container--8
    .page-title__bg-coins
      include ../../icons/svg-inline/coins-bg-page-title-large.svg
    .page-title__bg-waves
      include ../../icons/svg-inline/waves-bg-page-title.svg
    .page-title__head(data-aos="fade-up")
      .h4-title.c-gray=t('about.subtitle')
      h1.h1-title.h3-title-md.c-primary=t('about.title')

  .page-title__waves.bg-waves.bg-waves--bottom.bg-waves--dark
    include ../../icons/svg-inline/waves-up.svg
