// PAGE TITLE
.page-title.page-title--dark
  .container
    .page-title__bg-coins
      include ../../icons/svg-inline/coins-bg-page-title.svg
    .page-title__head(data-aos="fade-up")
      h1.h1-title.h3-title-md=t('contacts.title')

  .container.container--8
    // offices
    .page-title__offices.offices
      .offices__head(data-aos="fade-up")
        .h3-title.h4-title-md=t('contacts.offices')
      .offices__wrapper
        .offices__col
          .offices__element(data-aos="fade-up")
            .offices__icon
              +svgMono('map-point')
            .offices__content
              .h6-title=t('contacts.minsk')
              .h6-title.c-primary=t('contacts.minskAddress')
        .offices__col
          .offices__element(data-aos="fade-up")
            .offices__icon
              +svgMono('map-point-big')
            .offices__content
              .h6-title=t('contacts.moscow')
              .h6-title.c-primary=t('contacts.moscowAddress')
        .offices__col
          .offices__element(data-aos="fade-up")
            .offices__icon
              +svgMono('map-point')
            .offices__content
              .h6-title=t('contacts.hrodna')
              .h6-title.c-primary=t('contacts.hrodnaAddress')

  .page-title__waves.bg-waves.bg-waves--bottom.bg-waves--dark.bg-waves--h-small
    include ../../icons/svg-inline/waves-up.svg
