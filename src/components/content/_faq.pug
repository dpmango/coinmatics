            // section (2)
            .content__section(data-aos="fade-up")
              .content__section-title.h6-title.c-light Подключение, выбор трейдера
              // accardeon
              .content__accardeon.accardeon.accardeon--bg-white.js-accardeon
                -
                  var list = [
                    {title: "Какие биржи вы поддерживаете?"},
                    {title: "Кто такие трейдеры?"},
                    {title: "Какие варианты копитрейдинга у вас есть?"},
                    {title: "Как формируется рейтинг трейдерской эффективности"},
                    {title: "Как мне выбрать трейдера для копирования?"},
                  ]
                each element in list
                  +accardeonElement(element)

            // section (3)
            .content__section(data-aos="fade-up")
              .content__section-title.h6-title.c-light Вопросы по оплате
              // accardeon
              .content__accardeon.accardeon.accardeon--bg-white.js-accardeon
                -
                  var list = [
                    {title: "Какую сумму нужно иметь на биржевом кошельке для начала копитрейдинга?"},
                    {title: "Как рассчитывается комиссия?"},
                    {title: "Как происходит оплата за подписки?"},
                    {title: "С какой регулярностью происходит оплата?"},
                    {title: "Может ли измениться цена уже существующей подписки?"},
                    {title: "Есть ли какая-то дополнительная (абонентская) плата за копитрейдинг?"},
                    {title: "Как я могу отменить подписку? Что для этого нужно сделать?"},
                    {title: "Может ли трейдер закрыть доступ к повторению его сделок?"},
                  ]
                each element in list
                  +accardeonElement(element)

            // section (4)
            .content__section(data-aos="fade-up")
              .content__section-title.h6-title.c-light Подключение, выбор трейдера
              // accardeon
              .content__accardeon.accardeon.accardeon--bg-white.js-accardeon
