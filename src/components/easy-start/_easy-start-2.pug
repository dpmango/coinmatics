// EASY START
- var panelCoinmaticsUrl = 'https://panel.coinmatics.io';
.easy-start
  .easy-start__waves.bg-waves.bg-waves--gray
    include ../../icons/svg-inline/waves-up.svg

  .container
    .easy-start__wrapper.easy-start__wrapper--collapsed
      .easy-start__content
        .section-head(data-aos="fade-up")
          h4.h4-title.c-light=t('easy-start-2.subtitle')
          h2.h2-title.h3-title-md=t('easy-start-2.title')
          p.p-main=t('easy-start-2.description')
      .easy-start__steps
        .easy-start__steps-wrapper
          .easy-start__steps-col(data-aos="fade-up")
            // .es-card
            .es-card.es-card--line
              .es-card__image
                include ../../icons/svg-inline/trader-start-1.svg
              .es-card__content
                .h6-title 1. 
                  br
                  span=t('easy-start-2.firstCardTitle')
                .p-small.c-gray=t('easy-start-2.firstCardDescription')
          .easy-start__steps-col(data-aos="fade-up")
            // .es-card
            .es-card.es-card--line
              .es-card__image
                include ../../icons/svg-inline/trader-start-2.svg
              .es-card__content
                .h6-title 2. 
                  br
                  span=t('easy-start-2.secondCardTitle')
                .p-small.c-gray=t('easy-start-2.secondCardDescription')
          .easy-start__steps-col(data-aos="fade-up")
            // .es-card
            .es-card.es-card--line
              .es-card__image
                include ../../icons/svg-inline/trader-start-3.svg
              .es-card__content
                .h6-title 3.
                  br
                  span=t('easy-start-2.thirdCardTitle')
                .p-small.c-gray=t('easy-start-2.thirdCardDescription')

      .easy-start__cta(data-aos="fade-up")
        a(href=panelCoinmaticsUrl + '/signup').btn.btn-primary=t('easy-start-2.button')
