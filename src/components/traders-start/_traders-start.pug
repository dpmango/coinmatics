// TRADERS START
.trstart
  // banner (top)
  .trstart__banner
    .container
      .trstart__head.section-head(data-aos="fade-up")
        h4.h4-title.c-light Are you a trader?
        h2.h2-title.h3-title-md Start to Earn With Copytrading
        p.p-main.c-light Just sign up as a trader in our system, get subscribers and receive additional profit from your subscribers deals. You will decide by yourself what profit amount you will get.
        a(href="#").btn.btn-ghost.btn-ghost--b0 Learn more

      .trstart__banner-image(data-aos="fade")
        include ../../icons/svg-inline/illustration_trstart.svg

  // separator
  .trstart__waves.bg-waves.bg-waves--short.bg-null
    include ../../icons/svg-inline/waves-trstart-top.svg

  // tools (bottom)
  .trstart__tools
    .container
      .trstart__head.section-head(data-aos="fade-up")
        h3.h3-title.h4-title-md Trade With Our Tools

      include partials/_tools

      // cta
      .trstart__tools-cta(data-aos="fade-up")
        a(href="#").btn.btn-primary Start Trade

  .trstart__waves.bg-waves.bg-waves--bottom.bg-waves--dark
    include ../../icons/svg-inline/waves-up.svg
